              <fr:day>7</fr:day>
            </fr:date>
            <fr:uri>https://charloced.github.io/idem-comm-75C1/</fr:uri>
            <fr:display-uri>idem-comm-75C1</fr:display-uri>
            <fr:route>/idem-comm-75C1/</fr:route>
            <fr:title text="Local distributive lattice">Local distributive lattice</fr:title>
            <fr:taxon>Definition</fr:taxon>
